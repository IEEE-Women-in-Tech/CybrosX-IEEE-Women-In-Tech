%nav.top-bar{data: 'topbar', role: 'navigation'}
  %ul.title-area
    %li.name
      .logo
        = link_to image_tag("/assets/os4w_logo_small.png"), "/"
  %section.top-bar-section
    %ul.right
      - if current_user
        %li
          = link_to "My Dashboard", dashboard_path(1)
          - unread_count = current_user.unread_messages.count
          -if unread_count > 0
            %li
              = link_to "My Inbox (#{unread_count})", user_messages_path(current_user)
          -else
            %li
              = link_to "My Inbox", user_messages_path(current_user)
        - if current_user.is_admin?
          %li
            = link_to "Admin", '/admin/admin'
        %li
          = link_to "About OS4W", about_path
        %li
          = link_to "Contact Us", contact_us_path
        %li
          = link_to "Preferences", user_path(current_user)
        %li
          = link_to "Sign Out", sign_out_path
      - else
        %li
          = link_to "Sign In", sign_in_path
        %li
          = link_to "Sign Up", sign_up_path
        %li
          = link_to "About OS4W", about_path
        %li
          = link_to "Be an Ally", allies_path
        %li
          = link_to "Contact Us", contact_us_path
